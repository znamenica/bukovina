           - 10.10.1010
           - 10.10.1020
           :type: Marriage
         - :happened_at:
           - ок.1510
           - 1520
           :type: Repose
         - :happened_at:
           - 1810
           - ок.1820
           :item:
             :item_type:
               :descriptions:
               - :alphabeth_code: :ро
                 :language_code: :ру
                 :text: глава
           :type: Translation
         """
